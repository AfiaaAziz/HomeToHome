@page "/about"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<style>
    :root {
        --primary-color: #000000; 
        --accent-color: #ffffff; 
        --secondary-color: #4b5563; 
        --text-color: #1f2937; 
        --bg-light: #f9fafb;
        --bg-dark: #111827; 
    }

    .about-page {
        font-family: 'Poppins', 'Segoe UI', sans-serif;
        color: var(--text-color);
        line-height: 1.7;
        background-color: var(--bg-light);
        overflow-x: hidden;
    }

   
    .hero-section {
        position: relative;
        background: linear-gradient(145deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: var(--accent-color);
        padding: 8rem 2rem;
        text-align: center;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><path d="M0 0L200 200M200 0L0 200" stroke="rgba(255,255,255,0.15)" stroke-width="5"><animate attributeName="opacity" values="0.3;0.5;0.3" dur="3s" repeatCount="indefinite"/></path></svg>') no-repeat center;
            background-size: 60%;
            opacity: 0.3;
            animation: fadePulse 3s ease-in-out infinite;
        }

    @@keyframes fadePulse {
        0% {
            opacity: 0.3;
        }

        50% {
            opacity: 0.5;
        }

        100% {
            opacity: 0.3;
        }
    }

    .hero-section h1 {
        font-size: 4rem;
        font-weight: 800;
        letter-spacing: -0.025em;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        animation: slideIn 1s ease-out;
    }

    .hero-section p.lead {
        font-size: 1.5rem;
        max-width: 750px;
        margin: 1.5rem auto;
        color: #e5e7eb;
        animation: fadeIn 1.2s ease-out 0.2s forwards;
        opacity: 0;
    }

    .hero-section .btn-primary {
        background: var(--accent-color);
        color: var(--primary-color);
        border: 2px solid var(--primary-color);
        padding: 0.9rem 2.5rem;
        font-size: 1.2rem;
        border-radius: 50px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hero-section .btn-primary:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
            background: #e5e5e5;
        }

  
    .section {
        padding: 5rem 2rem;
        opacity: 0;
        transform: translateY(40px);
        animation: fadeInUp 0.8s ease forwards;
    }

        .section:nth-child(2) {
            animation-delay: 0.3s;
        }

        .section:nth-child(3) {
            animation-delay: 0.6s;
        }

        .section:nth-child(4) {
            animation-delay: 0.9s;
        }

        .section:nth-child(5) {
            animation-delay: 1.2s;
        }

        .section:nth-child(6) {
            animation-delay: 1.5s;
        }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    
    .mission-section {
        background: var(--bg-light);
        text-align: center; 
    }

        .mission-section ul.list-unstyled {
            display: inline-block; 
            text-align: left; 
            max-width: 600px; 
        }

            .mission-section ul.list-unstyled li {
                position: relative;
                padding-left: 2.5rem;
                margin-bottom: 1.5rem;
                font-size: 1.15rem;
                color: var(--text-color);
                transition: transform 0.3s ease;
            }

                .mission-section ul.list-unstyled li:hover {
                    transform: translateX(10px);
                }

                .mission-section ul.list-unstyled li::before {
                    content: "✓";
                    position: absolute;
                    left: 0;
                    color: var(--primary-color);
                    font-size: 1.3rem;
                    font-weight: bold;
                    transition: transform 0.3s ease;
                }

                .mission-section ul.list-unstyled li:hover::before {
                    transform: scale(1.2);
                }

        .mission-section p.fs-5.text-center {
            max-width: 750px; 
            margin-left: auto;
            margin-right: auto;
        }

  
    .story-section {
        position: relative;
        background: url('/images/home.jpg') no-repeat center center/cover fixed;
        color: var(--accent-color);
        padding: 6rem 2rem;
    }

        .story-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: 0;
        }

        .story-section .container {
            position: relative;
            z-index: 1;
        }

        .story-section p {
            background: rgba(255, 255, 255, 0.15);
            padding: 1.5rem;
            border-radius: 10px;
            backdrop-filter: blur(8px);
        }

   
    .team-section .card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        background: var(--accent-color);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .team-section .card:hover {
            transform: translateY(-12px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
        }

    .team-section .card-img-top {
        height: 350px; 
        object-fit: cover;
        object-position: top;
        transition: transform 0.4s ease;
    }

    .team-section .card:hover .card-img-top {
        transform: scale(1.08);
    }

    .team-section .card-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--primary-color);
    }

 
    .achievements-section {
        background: var(--bg-dark);
        color: var(--accent-color);
        padding: 4rem 2rem;
    }

        .achievements-section h3 {
            font-size: 2.8rem;
            font-weight: 700;
            color: var(--accent-color);
            margin-bottom: 0.5rem;
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
        }

        .achievements-section p {
            font-size: 1.1rem;
            color: #d1d5db;
        }

        .achievements-section .col-md-3 {
            transition: transform 0.3s ease;
        }

            .achievements-section .col-md-3:hover {
                transform: scale(1.1);
            }

 
    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2.8rem;
        }

        .hero-section p.lead {
            font-size: 1.2rem;
        }

        .section {
            padding: 3rem 1rem;
        }

        .team-section .card-img-top {
            height: 280px;
        }
        
        .achievements-section h3 {
            font-size: 2rem;
        }

        .story-section {
            background-attachment: scroll;
        }
    }

    @@media (max-width: 576px) {
        .hero-section {
            padding: 5rem 1rem;
        }

        .team-section .card-img-top {
            height: 220px;
        }
      
        .achievements-section .col-md-3 {
            margin-bottom: 2rem;
        }
    }
</style>

<div class="about-page">
  
    <section class="hero-section section">
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome to HomeToHome</h1>
            <p class="lead mt-3">
                Your trusted destination for seamless, on-demand home services.
            </p>
            <p class="fs-5 mt-4">
                From quick repairs to major renovations, we connect you with verified professionals who care.
            </p>
            <button class="btn btn-primary btn-lg mt-4"
                    @onclick="HandleExploreServicesClick"
                    aria-label="Explore HomeToHome Services">
                Explore Services
            </button>
        </div>
    </section>

   
    <section class="section mission-section bg-light">
        <div class="container">
            <h2 class="fw-bold">Our Mission</h2>
            <p class="mt-3 fs-5">
                At <strong>HomeToHome</strong>, we’re transforming home services with <strong>accessibility, transparency, and reliability</strong>. Your home deserves the best, and we make it happen.
            </p>
            <ul class="list-unstyled fs-5 mt-4">
                <li>Connect homeowners with trusted professionals effortlessly.</li>
                <li>Ensure trust with rigorous vetting and quality checks.</li>
                <li>Empower local talent with fair opportunities.</li>
                <li>Use advanced technology for seamless bookings.</li>
                <li>Deliver exceptional customer satisfaction every time.</li>
            </ul>
            <p class="fs-5 mt-4 text-center">
                We’re building a <strong>community of trust</strong>, one home at a time.
            </p>
        </div>
    </section>

  
    <section class="section story-section">
        <div class="container">
            <h2 class="fw-bold text-center">Our Story</h2>
            <div class="row mt-5 align-items-center">
                <div class="col-md-6 d-flex align-items-center">
                    <div>
                        <p class="fs-5">
                            It began with a question: <strong>“Why is reliable home help so hard to find?”</strong>
                        </p>
                        <p class="fs-5 mt-3">
                            Frustrated by inconsistent services, our founders created HomeToHome to connect homeowners with verified professionals. From plumbing to cleaning, we simplify home care.
                        </p>
                        <p class="fs-5 mt-3">
                            Starting locally, we’ve grown into a trusted platform, serving thousands with transparent pricing and quality service. Our mission is to rebuild trust in home services.
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="/images/home.jpg" alt="Our Story" class="img-fluid rounded shadow" aria-hidden="true" />
                </div>
            </div>
        </div>
    </section>


    <section class="section team-section bg-light">
        <div class="container">
            <h2 class="text-center fw-bold">Meet Our Team</h2>
            <div class="row text-center mt-5">
                @foreach (var member in TeamMembers)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card h-100" role="article" aria-labelledby="@($"name-{member.Name.Replace(" ", "-").ToLower()}")">
                            <img src="@member.ImageUrl" class="card-img-top" alt="@member.Name" />
                            <div class="card-body">
                                <h5 class="card-title" id="@($"name-{member.Name.Replace(" ", "-").ToLower()}")">@member.Name</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>


    <section class="section text-center bg-white">
        <div class="container">
            <h2 class="fw-bold">Join the Movement</h2>
            <p class="fs-5 mt-3">
                Passionate about revolutionizing home services? Let’s build the future together.
            </p>
            <NavLink href="/contact" class="btn btn-primary btn-lg mt-4" aria-label="Contact HomeToHome">Connect with Us</NavLink>
        </div>
    </section>

  
    <section class="section achievements-section text-center">
        <div class="container">
            <h2 class="fw-bold mb-5">Our Achievements</h2>
            <div class="row">
                <div class="col-md-3 col-sm-6 mb-4">
                    <h3>10,000+</h3>
                    <p>Happy Customers</p>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <h3>98%</h3>
                    <p>Satisfaction Rate</p>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <h3>500+</h3>
                    <p>Verified Providers</p>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <h3>5 Cities</h3>
                    <p>Growing Fast</p>
                </div>
            </div>
        </div>
    </section>
</div>

@code {
    

    public class TeamMember
    {
        public string Name { get; set; } = string.Empty;
        public string ImageUrl { get; set; } = string.Empty;
    }

    private List<TeamMember> TeamMembers = new()
    {
        new TeamMember { Name = "Arooba Shehzadi", ImageUrl = "/images/team1.jpg" },
        new TeamMember { Name = "Afia Aziz", ImageUrl = "/images/team2.jpg" },
        new TeamMember { Name = "Zumer Dhillun", ImageUrl = "/images/team3.jpg" }
    };

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private void HandleExploreServicesClick()
    {
        Navigation.NavigateTo("/ourservices"); 
    }
}